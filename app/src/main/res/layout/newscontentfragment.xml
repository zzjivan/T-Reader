<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_header_height"
        android:layout_marginTop="@dimen/toolbar_height"
        apps:layout_behavior="com.snick.zzj.t_reader.Behavior.NewsHeaderBehavior">
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimaryDark"/>
    </FrameLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:theme="@style/toolbar_theme"
        apps:layout_behavior="com.snick.zzj.t_reader.Behavior.ToolbarBehavior">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:background="?attr/colorPrimary"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/content_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        apps:layout_anchor="@id/anchor"
        apps:layout_anchorGravity="bottom"
        apps:layout_behavior="com.snick.zzj.t_reader.Behavior.NewsContentBehavior">
        <com.tencent.smtt.sdk.WebView
            android:id="@+id/tbsContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>